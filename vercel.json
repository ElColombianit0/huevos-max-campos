{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@ardnt/vercel-python-wsgi",
            "config": { "maxLambdaSize": "15mb" }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/"
        }
    ],
    "env": {
        "MONGO_URI": "@mongo_uri",
        "GOOGLE_CLIENT_ID": "@google_client_id",
        "GOOGLE_CLIENT_SECRET": "@google_client_secret",
        "SECRET_KEY": "@secret_key"
    }
}